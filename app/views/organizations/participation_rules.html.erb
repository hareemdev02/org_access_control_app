<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Participation Rules for <%= @organization.name %></h2>
        <%= link_to 'Back to Organization', organization_path(@organization), class: 'btn btn-secondary' %>
      </div>

      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Age-Based Participation Rules</h5>
            <%= link_to 'Add New Rule', new_organization_participation_rule_path(@organization), class: 'btn btn-primary btn-sm' %>
          </div>
        </div>
        <div class="card-body">
          <% if @participation_rules.any? %>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Age Group</th>
                    <th>Age Range</th>
                    <th>Participation Status</th>
                    <th>Parental Consent</th>
                    <th>Content Filtering</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @participation_rules.each do |rule| %>
                    <tr>
                      <td>
                        <strong><%= rule.age_group.titleize %></strong>
                      </td>
                      <td>
                        <strong><%= rule.min_age %></strong> - <strong><%= rule.max_age %></strong> years
                      </td>
                      <td>
                        <% if rule.participation_allowed? %>
                          <span class="badge badge-success">Allowed</span>
                        <% else %>
                          <span class="badge badge-danger">Restricted</span>
                        <% end %>
                      </td>
                      <td>
                        <% if rule.parental_consent_required? %>
                          <span class="badge badge-danger">Required</span>
                        <% else %>
                          <span class="badge badge-success">Not Required</span>
                        <% end %>
                      </td>
                      <td>
                        <span class="badge badge-<%= rule.content_filtering_level == 'strict' ? 'danger' : (rule.content_filtering_level == 'moderate' ? 'warning' : 'success') %>">
                          <%= rule.content_filtering_level.titleize %>
                        </span>
                      </td>
                      <td>
                        <% if rule.enabled? %>
                          <span class="badge badge-success">Active</span>
                        <% else %>
                          <span class="badge badge-secondary">Inactive</span>
                        <% end %>
                      </td>
                      <td>
                        <div class="btn-group" role="group">
                          <%= link_to 'View', organization_participation_rule_path(@organization, rule), class: 'btn btn-sm btn-outline-primary' %>
                          <%= link_to 'Edit', edit_organization_participation_rule_path(@organization, rule), class: 'btn btn-sm btn-outline-warning' %>
                          <%= link_to 'Delete', organization_participation_rule_path(@organization, rule), 
                              method: :delete, 
                              class: 'btn btn-sm btn-outline-danger',
                              data: { confirm: 'Are you sure you want to delete this rule?' } %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <p class="text-muted">No participation rules defined yet.</p>
              <%= link_to 'Create First Rule', new_organization_participation_rule_path(@organization), class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="card mt-4">
        <div class="card-header">
          <h5 class="mb-0">Rule Summary</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h6>Age Groups Covered</h6>
              <ul class="list-unstyled">
                <% @participation_rules.enabled.each do |rule| %>
                  <li>
                    <strong><%= rule.age_group.titleize %> (<%= rule.min_age %>-<%= rule.max_age %> years):</strong>
                    <% if rule.participation_allowed? %>
                      <span class="text-success">Participation allowed</span>
                    <% else %>
                      <span class="text-danger">Participation restricted</span>
                    <% end %>
                    <% if rule.parental_consent_required? %>
                      <span class="text-danger">(Consent required)</span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
            <div class="col-md-6">
              <h6>Quick Stats</h6>
              <ul class="list-unstyled">
                <li><strong>Total Rules:</strong> <%= @participation_rules.count %></li>
                <li><strong>Active Rules:</strong> <%= @participation_rules.enabled.count %></li>
                <li><strong>Requiring Consent:</strong> <%= @participation_rules.where(requires_parental_consent: true).count %></li>
                <li><strong>Strict Filtering:</strong> <%= @participation_rules.where(content_filtering_level: 'strict').count %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 